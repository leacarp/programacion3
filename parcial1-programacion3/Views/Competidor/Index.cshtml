@model IEnumerable<parcial1_programacion3.Models.Competidores>

@{
    ViewData["Title"] = "Index";
}

<h1 >Listado de competidores</h1>

<p>
    <a asp-action="Create">Nuevo competidor</a>
</p>

@if (Model.Count() > 0)
{    
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.IDCompetidor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Edad)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CiudadResidencia)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IDDisciplina)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IDCompetidor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Edad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CiudadResidencia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IDDisciplina)
                </td>
                
            </tr>
    }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">No hay competidores registrados</div>
}

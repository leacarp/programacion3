@model IEnumerable<parcial1_programacion3.Models.DisciplinaCantidad>

@{
    ViewData["Title"] = "Participantes";
}

<h1>Participantes por disciplina</h1>

@if (Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NombreDisciplina)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CantidadParticipantes)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreDisciplina)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CantidadParticipantes)
                </td>
            </tr>
    }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">No hay participantes en ninguna disciplina</div>
}
